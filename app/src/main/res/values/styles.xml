<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <!--Text-->
    <style name="XLargeTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_XLargeTitle</item>
    </style>

    <style name="LargeTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_LargeTitle</item>
    </style>

    <style name="Title1" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_Title1</item>
    </style>

    <style name="Title2" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_Title2</item>
    </style>

    <style name="Title3" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_Title3</item>
    </style>

    <style name="HeadLine" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_HeadLine</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_Body</item>
    </style>

    <style name="SubTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_SubTitle</item>
    </style>

    <style name="Footnote" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_Footnote</item>
    </style>


    <!--Tutorial Text Style-->
    <style name="Title1.tutorial">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title2.tutorial">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body.tutorial">
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeadLine.onBoarding">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Home Header Text Style-->
    <style name="XLargeTitle.home_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title2.home_header">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.7</item>
    </style>

    <!--Goal Text Style-->
    <style name="Footnote.goal">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body.goal">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxEms">15</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--Create Item Text Style-->
    <style name="LargeTitle.create">
        <item name="android:textColor">@color/bluePrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="Title3.addPhoto">
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Title3.goalTitle">
        <item name="android:textColor">@color/bluePrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <!--Round Button-->
    <style name="RoundButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textSize">@dimen/text_Body</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.tutorial">
        <item name="android:backgroundTint">@color/button_blue</item>
    </style>

    <style name="circleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!--EditText-->
    <style name="BorderlessEditText" parent="android:Widget.EditText">
        <item name="android:backgroundTint">@color/blueSuperLight</item>
        <item name="android:background">@drawable/round_edit_text_background</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>